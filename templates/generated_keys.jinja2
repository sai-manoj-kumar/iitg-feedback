{% extends "base.jinja2" %}

{% block formlinks %}
{% endblock formlinks %}

{% block body %}
    <div class="well">
        {% if error is defined %}
        <div class="alert alert-block alert-error"> <h3 style="display:inline; margin:10px">Error: </h3>{{ error }}</div>
        {% endif %}


        <div class="alert alert-block alert-info">
            The datastore contains {{ count }} Keys.
        </div>

        {% if keys is defined %}
            <table class="table table-striped .table-bordered .table-hover">
            {% for key in keys %}
                <tr class="success">
                <td>
                <div>
                {{ key.formFilled}}
                </div>
                <td>
                <td>
                <div>
                {{ key.keyPhrase }}
                </div>
                <td>
                </tr>
            {% endfor %}
            <table>
        {% endif %}


    </div>
{% endblock body %}


