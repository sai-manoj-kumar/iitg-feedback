{% extends "base.jinja2" %}

{% block title %}
    IIT Guwahati CSE Feedback System -- Admin Section
{% endblock title %}

{% block formlinks %}
{% endblock formlinks %}

{% block body %}

    <div class="well">
        <h1>
            Welcome to Admin Section
        </h1>
    </div>
    <div class="well">
        <form method="get" action="/admin/viewkeys">
            <h2 style="display: inline;">View Keys</h2>
            <button class="btn btn-success btn-large" type="submit" style="margin-left: 20px">View Keys</button>
        </form>
    </div>

    <div class="well">
        <h2>Form A</h2>
        <form method="get" action="/admin/view?form=formA">
            <button class="btn btn-info btn-large" style="margin-left: 20px">View "Form A" Data</button>
        </form>
        <form method="get" action="/admin/download?form=formA">
            <button class="btn btn-primary btn-large" type="submit" style="margin-left: 20px">Download "Form A" Data</button>
        </form>
    </div>

    <div class="well">
        <h2>Form B</h2>
        <form method="get" action="/admin/view?form=formB">
            <button class="btn btn-info btn-large" style="margin-left: 20px">View "Form B" Data</button>
        </form>
        <form method="get" action="/admin/download?form=formB">
            <button class="btn btn-primary btn-large" type="submit" style="margin-left: 20px">Download "Form B" Data</button>
        </form>
    </div>

    <div class="well">
        <h2>Form C</h2>
        <form method="get" action="/admin/view?form=formC">
            <button class="btn btn-info btn-large" style="margin-left: 20px">View "Form C" Data</button>
        </form>
        <form method="get" action="/admin/download?form=formC">
            <button class="btn btn-primary btn-large" type="submit" style="margin-left: 20px">Download "Form C" Data</button>
        </form>
    </div>

    <div class="well">
            <form method="post" action="/admin/genkeys">
                <h1>
                    Key Generation
                </h1>
                <label style="margin-top: 20px;">
                    No. of Keys to be generated
                    <input type="text" name="num_keys" id="num_keys" required="required">
                </label>
                <button type="submit" class="btn btn-danger btn-large">Generate Keys</button>
            </form>
    </div>
{% endblock body %}