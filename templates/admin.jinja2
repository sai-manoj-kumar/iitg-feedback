{% extends "base.jinja2" %}

{% block title %}
    IIT Guwahati CSE Feedback System -- Admin Section
{% endblock title %}

{% block formlinks %}
{% endblock formlinks %}

{% block body %}

    <div class="well">
        <h1>
            Welcome to Admin Section
        </h1>
    </div>
    <div class="well">
        <h2 style="display: inline;">View Keys</h2>

        <form class="form-inline" method="get" action="/admin/viewkeys">
            <label class="control-label" for="viewKeys">
                Select the Form Type
                <select class="input-medium" id="viewKeys" name="viewKeys" required="required">
                    <option value="">Select Form Type...</option>
                    <option value="A">Form A</option>
                    <option value="B">Form B</option>
                    <option value="C">Form C</option>
                </select>
            </label>
            <button class="btn btn-success btn-large" type="submit" style="margin-left: 20px">View Keys</button>
        </form>
    </div>

    <div class="well">
        <h2>Form A</h2>

        <form class="form-inline" method="get" action="/admin/viewdata">
            <label class="control-label" for="formView">
                Select the Form Type
                <select class="input-medium" id="formView" name="formView" required="required">
                    <option value="">Select Form Type...</option>
                    <option value="A">Form A</option>
                    <option value="B">Form B</option>
                    <option value="C">Form C</option>
                </select>
            </label>
            <button class="btn btn-info btn-large" style="margin-left: 20px">View Filled Form Data</button>
        </form>

        <form class="form-inline" method="get" action="/admin/download">
            <label class="control-label" for="formDownload">
                Select the Form Type
                <select class="input-medium" id="formDownload" name="formDownload" required="required">
                    <option value="">Select Form Type...</option>
                    <option value="A">Form A</option>
                    <option value="B">Form B</option>
                    <option value="C">Form C</option>
                </select>
            </label>
            <button class="btn btn-primary btn-large" type="submit" style="margin-left: 20px">Download Filled Form Data
            </button>
        </form>
    </div>

    <div class="well">
        <h1>
            Generate Keys
        </h1>

        <form class="form-actions" method="post" action="/admin/genkeys">
            <label class="control-label" for="formType">
                Select the Form Type
                <select class="input-medium" id="formType" name="formType" required="required">
                    <option value="">Select Form Type...</option>
                    <option value="A">Form A</option>
                    <option value="B">Form B</option>
                    <option value="C">Form C</option>
                </select>
            </label>
            <label>
                No. of Keys to be generated
                <input type="text" name="num_keys" id="num_keys" required="required">
            </label>
            <button type="submit" class="btn btn-danger btn-large">Generate Keys</button>
        </form>
    </div>

{% endblock body %}