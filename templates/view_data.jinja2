{% extends "base.jinja2" %}

{% block formlinks %}
{% endblock formlinks %}

{% block body %}
    <div class="well">
        {% if alert is defined %}
            <div class="alert alert-block alert-{{alert_type}}">
                <h4>{{ alert }}</h4>
            </div>
        {% endif %}

        {% if count is defined %}
        <div class="alert alert-block alert-info">
            <h4>The datastore contains {{ count }} filled forms.</h4>
        </div>
        {% endif %}

        {% if records is defined and count > 0 %}
            <table class="table table-striped table-bordered table-hover">
            {% for record in records %}
                <tr>
                    {% for attr in attributes %}
                    <td>
                        {{ record[attr] }}
                    </td>
                    {% endfor %}
                    <td>
                        {{ record['comment'][:10] }}...
                    </td>
                </tr>
            {% endfor %}
            <table>
        {% endif %}
    </div>

{% endblock body %}


